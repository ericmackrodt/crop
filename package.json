{
  "name": "image-cropper",
  "version": "1.0.0",
  "description": "Electron app for easily cropping images",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"yarn dev:renderer\" \"yarn build:main:watch\" \"yarn type-check:watch\" \"wait-on http://localhost:5173 && NODE_ENV=development electron .\"",
    "dev:renderer": "vite",
    "type-check": "yarn type-check:main && yarn type-check:preload && yarn type-check:renderer",
    "type-check:watch": "concurrently \"yarn type-check:main:watch\" \"yarn type-check:preload:watch\" \"yarn type-check:renderer:watch\"",
    "type-check:main": "tsc -p tsconfig.main.json --noEmit",
    "type-check:main:watch": "tsc -p tsconfig.main.json --noEmit --watch",
    "type-check:preload": "tsc -p tsconfig.preload.json --noEmit",
    "type-check:preload:watch": "tsc -p tsconfig.preload.json --noEmit --watch",
    "type-check:renderer": "tsc -p tsconfig.json --noEmit",
    "type-check:renderer:watch": "tsc -p tsconfig.json --noEmit --watch",
    "build": "yarn type-check && yarn build:main && yarn build:preload && vite build",
    "build:main": "tsc -p tsconfig.main.json",
    "build:main:watch": "tsc -p tsconfig.main.json --watch",
    "build:preload": "tsc -p tsconfig.preload.json",
    "preview": "vite preview",
    "electron": "electron .",
    "postinstall": "yarn build:main && yarn build:preload"
  },
  "keywords": [
    "electron",
    "image",
    "crop"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-image-crop": "^10.1.8"
  },
  "packageManager": "yarn@4.0.2+sha512.4e502bea682e7d8004561f916f1da2dfbe6f718024f6aa50bf8cd86f38ea3a94a7f1bf854a9ca666dd8eafcfb8d44baaa91bf5c7876e79a7aeac952c332f0e88"
}
